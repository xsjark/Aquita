		<!-- Item table -->
		<div class="container-fluid">
	 	<table class="table table-sm table-striped table-bordered"
					 id="item_table" >
			<thead>
				<tr>
					<th>#id</th>
					<th>Name</th>
					<th>Price</th>
					<th>Quantity</th>
					<th>Description</th>
					<th>Actions</th>
				</tr>
			</thead>
			<tbody>
				<% for(var i = 0; i < items.length; i++) {%>
							<tr data-id="<%= items[i]._id %>">
								<td><%= items[i]._id %> </td>
								<td><%= items[i].name %> </td>
								<td><%= items[i].price.toFixed(2).padStart(5,'0')  %></td>
								<td><%= items[i].quantity %></td>
								<td><%= items[i].description %></td>

								<td>
									<button type="button" class="btn btn-default btn-sm"><a  href="http://localhost:3000/item/<%=  items[i]._id%>" >Delete</a></button>
									<!-- Button trigger edit modal -->
									<button type="button" class="btn btn-default btn-sm" data-toggle="modal" data-target="#myModal<%= items[i]._id %>">
  								Edit
									</button>
								</td>
									<!-- Modal for editing-->
									<div class="modal fade" id="myModal<%= items[i]._id %>" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
										<div class="modal-dialog" role="document">
											<div class="modal-content">
												<div class="modal-header">
													<button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
													<h4 class="modal-title" id="myModalLabel">Edit <%= items[i].name %> </h4>
												</div>
												<div class="modal-body">
													<form class="form-inline" action="/item/<%= items[i]._id %>?_method=put" method="post">
														<div class="form-group">
															<input type="text" class="form-control" id="edit-name" value="<%= items[i].name %>" name="name">
														</div>
														<div class="form-group">
															<input type="text" class="form-control" id="edit-price" value="<%= items[i].price %>" name="price">
														</div>
														<div class="form-group">
															<input type="text" class="form-control" id="edit-quantity" value="<%= items[i].quantity %>" name="quantity">
														</div>
														<div class="form-group">
															<input type="text" class="form-control" id="edit-description" value="<%= items[i].description %>" name="description">
														</div>														
														<button type="submit" class="btn btn-default">Save</button>
													</form>
												</div>
											</div>
										</div>
									</div>
								</tr> 
				 <% } %>
			</tbody>
			<tfoot>
				<!-- Table Footer -->
			</tfoot>
		</table>
	</div>
		<!-- Modal for add new item -->
	<div class="modal fade" id="additem-modal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
										<div class="modal-dialog" role="document">
											<div class="modal-content">
												<div class="modal-header">
													<button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
